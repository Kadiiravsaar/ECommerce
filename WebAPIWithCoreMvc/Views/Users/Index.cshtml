@model IEnumerable<Entitites.Dtos.User.UserDetailDto>

<h1>Kullanıcılar</h1>

<a class="btn btn-primary mb-3" asp-action="Add">Kullanıcı Ekle</a>

<table class="table table-bordered">



    <tr>
        <td>Id</td>
        <td>Kullanıcı adı</td>
        <td>Ad</td>
        <td>Soyad</td>
        <td>Cinsiyet</td>
        <td>Doğum Tarihi</td>
        <td>Email</td>
        <td>Adres</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Gender</td>
            <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Düzenle</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a> </td>

        </tr>
    }
</table>


